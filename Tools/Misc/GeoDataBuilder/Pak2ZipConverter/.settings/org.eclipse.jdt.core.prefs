#------------------------------------------------------------------------------
# Build variables and rules for platform "linux"
#
# $Id$
#------------------------------------------------------------------------------
CC						= gcc
LD						= gcc
CXX						= g++

CPPFLAGS_RELEASE		= -O2
CPPFLAGS_DEBUG			= -g

CPPFLAGS_SHLIB		  = -fPIC
CPPFLAGS				= -DMT_SERVER \
						  -D_REENTRANT \
						  -D_LARGEFILE64_SOURCE \
						  -D__LINUX__ \
						  -DLinux \
						  -D_iso_stdcpp_ \
						  -DAC_VERSION_NO='"$(AC_VERSION_NO)"' \
						  -DAC_BUILD_NUMBER='"$(BUILD_NUMBER)"' \
						  -I$(TOP)/include \
						  -I/usr/local/ssl/include \
						  -I$(AC_BUILD_DIR)/include \
						  $(CPPFLAGS